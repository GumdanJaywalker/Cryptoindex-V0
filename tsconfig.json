{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "backend-api-reference/**/*.ts",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    // Quarantine experimental/duplicate files (with numeric suffixes)
    "**/* 2.ts",
    "**/* 2.tsx",
    "**/* 3.ts",
    "**/* 3.tsx",
    "**/* 4.ts",
    "**/* 4.tsx",
    // Exclude test/demo routes and pages
    "app/test-**",
    "app/dialogs-demo/**",
    "app/test-**/**",
    "app/**/page.backup.tsx",
    // Exclude non-app folders
    "aceternity-setup/**",
    "HYPERLIQUID/**",
    ".next/**",
    "lib/middleware/**",
    "lib/privy/**"
  ]
}
